{
  "name": "flextimer",
  "version": "1.0.0",
  "description": "The ultimate countdown library with seamless animations, customizable modes, and a simple yet powerful API.",
  "main": "dist/flextimer.js",
  "module": "dist/flextimer.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "webpack --mode production",
    "build:all": "webpack --mode production && tsc",
    "build:esm": "webpack --mode production --config webpack.config.js",
    "dev": "webpack --mode development --watch",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/preset-react": "^7.12.0",
    "@babel/preset-typescript": "^7.12.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^7.1.2",
    "eslint": "^7.13.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-vue": "^8.5.0",
    "jest": "^29.7.0",
    "lint-staged": "^13.0.1",
    "mini-css-extract-plugin": "^2.9.2",
    "prettier": "^2.2.1",
    "style-loader": "^4.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.20.0",
    "webpack-cli": "^4.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@angular/common": "^19.1.4",
    "@angular/compiler": "^19.1.4",
    "@angular/core": "^19.1.4",
    "@angular/platform-browser": "^19.1.4"
  }
}
